<?xml version="1.0" encoding="utf-8"?>
<resources>
<!-- Base application theme. -->
<style name="BaseAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->

    <!-- provided green color to the ActionBar -->
    <item name="colorPrimary">#0F9D58</item>
    <item name="colorPrimaryDark">@color/cardview_shadow_end_color</item>
    <item name="colorAccent">@color/cardview_shadow_start_color</item>
</style>

    <!-- Declare the theme name that's actually applied in the manifest file. -->
    <style name="DayTheme" parent="BaseAppTheme" />
    <style name="NightTheme" parent="BaseAppTheme">
        <item name="colorPrimaryDark">@color/RAISIN_BLACK</item>
        <item name="colorAccent">@color/NON_PHOTO_BLUE</item>
        <item name="android:colorBackground">@color/RAISIN_BLACK</item>

    </style>
</resources>
